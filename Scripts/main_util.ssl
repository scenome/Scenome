library Main;

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetDatabaseIncludePath()
{
   return "//Includes";
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetApplicationResourcePath()
{
   return "//Graph//Resources";
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetAppBuildFileName()
{
   return "app_build.bat";
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetAppExecutable()
{
   return "apppackage.exe";
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetShaderIncludePath()
{
   auto FilePath a_oLibraryPath =
      new FilePath( Application.GetApplicationDocumentsPath() );
   a_oLibraryPath.AppendPath( "Includes\\" );
   return a_oLibraryPath.GetPath();
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetFunctionLibraryPath()
{
   auto FilePath a_oLibraryPath =
      new FilePath( GetShaderIncludePath() );
   a_oLibraryPath.AppendPath( "SPA_Functions.box" );
   return a_oLibraryPath.GetPath();
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetGlobalConstantsPath()
{
   auto FilePath a_oLibraryPath =
      new FilePath( GetShaderIncludePath() );
   a_oLibraryPath.AppendPath( "SPA_Globals.box" );
   return a_oLibraryPath.GetPath();
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetGlslGeneratorScript()
{
   auto FilePath a_oScriptPath = new FilePath( Application.GetApplicationDataPath() );
   a_oScriptPath.AppendPath( "scripts" );
   a_oScriptPath.AppendPath( "generate_glsl_scripts.ssl" );
   a_oScriptPath.Canonicalize();
   return a_oScriptPath.GetPath();
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetGlslGeneratorFunction()
{
   return "GenerateShader";
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetShaderGenerationFile()
{
   return "generate_shader_code.ssl";
}

////////////////////////////////////////////////////////////////////////////////
// function
////////////////////////////////////////////////////////////////////////////////

function string GetExpressionDatabase()
{
   return Application.GetApplicationDocumentsPath() + "Templates\\Expressions\\Expressions.box";
}
